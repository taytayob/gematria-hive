modules = ["python-3.12"]

[env]
PYTHON_VERSION = "3.12"
# Set SUPABASE_URL and SUPABASE_KEY via Replit Secrets (lock icon in sidebar)
# Or uncomment and set here:
# SUPABASE_URL = "https://your-project.supabase.co"
# SUPABASE_KEY = "your-anon-key-here"

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[workflows]
runButton = "All Services"

[[workflows.workflow]]
name = "All Services"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt && python run_kanban.py"
waitForPort = 8000

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_internal_api.py"
waitForPort = 8001

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 8001

[deployment]
deploymentTarget = "autoscale"
run = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
